.chat-main
  .chat-main__header
    .chat-main__header__leftbox
      .chat-main__header__leftbox__groupname
        = @group.name
      .chat-main__header__leftbox__memberlist
        Member:
        - @group.users.each do |user|
          = user.name
    .chat-main__header__edit-btn
      = link_to edit_group_path(@group), class: "deconone" do
        Edit
  .chat-main__messages
    = render @messages
  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message__new-message', placeholder: 'type a message'
      .input-box
        = f.label :image, class: 'input-box__text' do
          = icon('far', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
